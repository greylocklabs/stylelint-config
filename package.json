{
  "name": "@greylocklabs/stylelint-config",
  "version": "1.2.1",
  "description": "Greylock Labs Stylelint rules",
  "author": {
    "name": "Ty-Lucas Kelley",
    "email": "ty@greylocklabs.com",
    "url": "https://tylucaskelley.com"
  },
  "homepage": "https://github.com/greylocklabs/stylelint-config",
  "bugs": "https://github.com/greylocklabs/stylelint-config/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/greylocklabs/stylelint-config"
  },
  "license": "MIT",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "lint",
    "css",
    "sass",
    "scss",
    "vue"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "postclean": "yarn install",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint index.js test/index.test.js test/data/*.vue",
    "lint:md": "markdownlint README.md CHANGELOG.md .github",
    "pretest": "yarn lint",
    "test": "jest",
    "prepublishOnly": "yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "main": "index.js",
  "engines": {
    "node": ">= 8",
    "yarn": ">= 1.15.2"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ]
  },
  "peerDependencies": {
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-processor-html": "1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@greylocklabs/eslint-config": "3.1.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-jest": "24.9.0",
    "babel-polyfill": "6.26.0",
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "jest-preset-stylelint": "1.3.0",
    "markdownlint-cli": "0.18.0",
    "shelljs": "0.8.3",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-processor-html": "1.0.0",
    "typescript": "^3.6.2"
  }
}

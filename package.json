{
  "name": "@greylocklabs/stylelint-config",
  "version": "1.1.0",
  "description": "Greylock Labs Stylelint rules",
  "author": {
    "name": "Ty-Lucas Kelley",
    "email": "ty@greylocklabs.com",
    "url": "https://tylucaskelley.com"
  },
  "homepage": "https://github.com/greylocklabs/stylelint-config",
  "bugs": "https://github.com/greylocklabs/stylelint-config/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/greylocklabs/stylelint-config"
  },
  "license": "MIT",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "lint",
    "css",
    "sass",
    "scss",
    "vue"
  ],
  "scripts": {
    "preinstall": "node -e \"if (!~process.env.npm_execpath.indexOf('yarn')) throw new Error('Install dependencies with yarn, not npm')\"",
    "clean": "rm -rf node_modules",
    "postclean": "yarn install",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint index.js test/index.test.js test/data/*.vue",
    "lint:md": "markdownlint README.md CHANGELOG.md .github",
    "pretest": "yarn lint",
    "test": "jest",
    "prepublishOnly": "yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "main": "index.js",
  "engines": {
    "node": ">= 8",
    "yarn": ">= 1.15.2"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ]
  },
  "peerDependencies": {
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "stylelint-processor-html": "1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@greylocklabs/eslint-config": "3.0.3",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-jest": "24.7.1",
    "babel-polyfill": "6.26.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "jest-preset-stylelint": "1.3.0",
    "markdownlint-cli": "0.15.0",
    "shelljs": "0.8.3",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "stylelint-processor-html": "1.0.0",
    "typescript": "^3.4.4"
  }
}
